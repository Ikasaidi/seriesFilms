{
  "openapi": "3.0.3",
  "info": {
    "title": "420-514-TP1 API v2",
    "version": "2.0.0",
    "description": "Documentation OpenAPI pour l’API Films & Séries."
  },
  "servers": [
    {
      "url": "http://localhost:3000/api/v2",
      "description": "Local HTTP"
    },
    {
      "url": "https://localhost:3443/api/v2",
      "description": "Local HTTPS"
    }
  ],
  "tags": [
    {
      "name": "Auth"
    },
    {
      "name": "Users"
    },
    {
      "name": "Movies"
    },
    {
      "name": "Series"
    },
    {
      "name": "Seasons"
    },
    {
      "name": "Episodes"
    },
    {
      "name": "Ratings"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "status": {
            "type": "integer"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "UserPublic": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "username": {
            "type": "string"
          },
          "role": {
            "type": "string",
            "enum": [
              "user",
              "admin"
            ]
          }
        },
        "required": [
          "id",
          "email",
          "username",
          "role"
        ]
      },
      "RegisterBody": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "name": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "role": {
            "type": "string"
          }
        },
        "required": [
          "email",
          "name",
          "username",
          "password"
        ]
      },
      "LoginBody": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string"
          }
        },
        "required": [
          "email",
          "password"
        ]
      },
      "AuthResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "token": {
            "type": "string"
          },
          "user": {
            "$ref": "#/components/schemas/UserPublic"
          }
        }
      },
      "Movie": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "genres": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "synopsis": {
            "type": "string"
          },
          "releaseDate": {
            "type": "string",
            "format": "date-time"
          },
          "durationMin": {
            "type": "integer"
          }
        },
        "required": [
          "title",
          "genres",
          "durationMin"
        ]
      },
      "Series": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "genres": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "status": {
            "type": "string",
            "enum": [
              "on-going",
              "ended"
            ]
          }
        },
        "required": [
          "title",
          "genres",
          "status"
        ]
      },
      "Season": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "seriesId": {
            "type": "string"
          },
          "seasonNo": {
            "type": "integer"
          },
          "episodes": {
            "type": "integer"
          }
        },
        "required": [
          "seriesId",
          "seasonNo"
        ]
      },
      "Episode": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "seriesId": {
            "type": "string"
          },
          "seasonId": {
            "type": "string"
          },
          "epNo": {
            "type": "integer"
          },
          "title": {
            "type": "string"
          },
          "durationMin": {
            "type": "integer"
          },
          "releaseDate": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": [
          "seriesId",
          "seasonId",
          "epNo",
          "title",
          "durationMin"
        ]
      },
      "Rating": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "userId": {
            "type": "string"
          },
          "target": {
            "type": "string"
          },
          "targetId": {
            "type": "string"
          },
          "score": {
            "type": "number"
          },
          "review": {
            "type": "string"
          }
        },
        "required": [
          "userId",
          "target",
          "targetId",
          "score"
        ]
      },
      "PagedMovies": {
        "type": "object",
        "properties": {
          "total": {
            "type": "integer"
          },
          "page": {
            "type": "integer"
          },
          "pages": {
            "type": "integer"
          },
          "limit": {
            "type": "integer"
          },
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Movie"
            }
          }
        }
      }
    }
  },
  "paths": {
    "/auth/register": {
      "post": {
        "summary": "Créer un compte",
        "tags": [
          "Auth"
        ],
        "responses": {
          "201": {
            "description": "Créé"
          },
          "409": {
            "description": "Conflit"
          },
          "422": {
            "description": "Validation"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterBody"
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Se connecter",
        "tags": [
          "Auth"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthResponse"
                }
              }
            }
          },
          "401": {
            "description": "Invalid creds"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginBody"
              }
            }
          }
        }
      }
    },
    "/auth/{id}/promote": {
      "patch": {
        "summary": "Promouvoir en admin",
        "tags": [
          "Auth"
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Non authentifié"
          },
          "403": {
            "description": "Interdit"
          },
          "404": {
            "description": "Introuvable"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ]
      }
    },
    "/users/me": {
      "get": {
        "summary": "Mon profil",
        "tags": [
          "Users"
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Non authentifié"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      },
      "patch": {
        "summary": "Modifier mon profil",
        "tags": [
          "Users"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "additionalProperties": true
              }
            }
          }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "summary": "Voir un utilisateur (admin)",
        "tags": [
          "Users"
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "403": {
            "description": "Interdit"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ]
      }
    },
    "/movies": {
      "get": {
        "summary": "Lister les films",
        "tags": [
          "Movies"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PagedMovies"
                }
              }
            }
          }
        },
        "parameters": [
          {
            "in": "query",
            "name": "title",
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "genre",
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "minYear",
