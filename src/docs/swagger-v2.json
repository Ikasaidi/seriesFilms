              "type": "integer"
            }
          },
          {
            "in": "query",
            "name": "maxDur",
            "schema": {
              "type": "integer"
            }
          },
          {
            "in": "query",
            "name": "page",
            "schema": {
              "type": "integer"
            }
          },
          {
            "in": "query",
            "name": "limit",
            "schema": {
              "type": "integer"
            }
          }
        ]
      },
      "post": {
        "summary": "Créer un film (admin)",
